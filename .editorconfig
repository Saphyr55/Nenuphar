# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Baseline
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false
max_line_length = 120


# MSBuild
[*.{csproj,proj,projitems,shproj,fsproj,target,props}]
indent_style = space
indent_size = 2

# NPBuild 
[*.{nproj}]
indent_style = space
indent_size = 2

# XML config files
[*.{config,nuspec,resx,natvis}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4

# YAML, XML files
[*.{yaml,xml, nproj}]
indent_style = space
indent_size = 2